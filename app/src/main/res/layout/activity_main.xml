<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/degrade">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Trabalho Avaliativo"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textAppearance="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/Titulo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pedro Willian Moraes Lourenço"
        app:layout_constraintTop_toBottomOf="@id/Titulo"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:id="@+id/Nome"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"         android:textColor="@color/white"

        android:text="20232012000280"
        app:layout_constraintTop_toBottomOf="@id/Nome"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/Matricula"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"         android:textColor="@color/white"

        android:text="Análise e desenvolvimento de sistemas"
        app:layout_constraintTop_toBottomOf="@id/Matricula"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/Curso"/>
    <Button
        android:id="@+id/btnProximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Curso"
        app:flow_horizontalAlign="center"
        android:text="Proxima tela "
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>